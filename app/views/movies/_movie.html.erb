<div id="<%= dom_id(movie) %>">
  <p>
    <strong>Title:</strong>
    <%= movie.title %>
  </p>

  <p> 
    <strong>Description:</strong>
    <%= movie.description %>
  </p>

  <p>
    <strong>Release year:</strong>
    <%= movie.release_year %>
  </p>

  <% if movie.photos.attached? %>
    <% movie.photos.each do |photo| %>
      <%= image_tag(photo) %>
    <% end %>
  <% end %>

  
</div>
